---
const projects = [
  {
    category: "Formación",
    title: "Master en Desarrollo Web Moderno",
    description: "Instructor principal de curso intensivo cubriendo el stack completo desde lógica hasta deployment.",
    image: "https://images.unsplash.com/photo-1524178232363-1fb2b075b655?auto=format&fit=crop&q=80&w=1000",
    tags: ["React", "Astro", "Node.js"],
    impact: "+20 Estudiantes"
  },
  {
    category: "Asesoría Técnica",
    title: "Arquitectura Tesis Ingeniería",
    description: "Mentoría especializada en diseño de sistemas y optimización de base de datos para proyecto de grado.",
    image: "https://images.unsplash.com/photo-1517694712202-14dd9538aa97?auto=format&fit=crop&q=80&w=1000",
    tags: ["SQL", "Arquitectura", "Backend"],
    impact: "Tesis Aprobada"
  },
  {
    category: "Workshop",
    title: "Interactividad con GSAP",
    description: "Taller práctico enfocado en animaciones web de alto rendimiento y experiencia de usuario.",
    image: "https://images.unsplash.com/photo-1550745165-9bc0b252726f?auto=format&fit=crop&q=80&w=1000",
    tags: ["GSAP", "UI/UX", "JS"],
    impact: "15 Profesionales"
  }
];
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-end mb-16">
      <h2 class="text-4xl font-bold reveal">Impacto y Formación</h2>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="group relative overflow-hidden rounded-2xl reveal bg-white/5 backdrop-blur-sm border border-white/10 hover:border-primary-cyan/50 transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-t from-[#2A2F36] via-[#2A2F36]/20 to-transparent z-10 opacity-90"></div>
          
          <div class="h-[220px] overflow-hidden">
            <img 
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700 opacity-60"
            />
            <div class="absolute top-4 left-4 z-20">
              <span class="px-3 py-1 bg-primary-blue/80 backdrop-blur-md rounded-full text-[10px] font-bold uppercase tracking-widest text-white border border-white/20">
                {project.category}
              </span>
            </div>
          </div>

          <div class="p-6 relative z-20 -mt-12">
            <h3 class="text-2xl font-bold mb-2 group-hover:text-primary-cyan transition-colors line-clamp-1">{project.title}</h3>
            <p class="text-gray-400 text-sm mb-6 line-clamp-2">{project.description}</p>
            
            <div class="flex items-center justify-between mt-auto">
              <div class="flex gap-2">
                {project.tags.slice(0, 2).map((tag) => (
                  <span class="text-[11px] font-medium text-primary-cyan opacity-80">#{tag}</span>
                ))}
              </div>
              <span class="text-xs font-bold text-white/50">{project.impact}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>