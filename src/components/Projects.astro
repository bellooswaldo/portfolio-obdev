---
import erpImg from '../assets/erp.png';
import csharpImg from '../assets/csharp.png';
import roboticsImg from '../assets/robotics.png';

const projects = [
  {
    category: "Software Empresarial",
    title: "ERP Académico Integral",
    description: "Sistema de gestión de recursos empresariales desarrollado como modelo educativo. Incluye módulos de inventario, facturación y control de usuarios.",
    image: erpImg.src,
    tags: ["C#", "PostgreSQL", "MySQL"],
    impact: "Proyecto Modelo"
  },
  {
    category: "Mentoría Técnica",
    title: "Laboratorio de C# y .NET",
    description: "Repositorio de patrones de diseño y mejores prácticas utilizado para la formación de estudiantes universitarios y profesionales.",
    image: csharpImg.src,
    tags: ["C#", "POO", "Arch"],
    impact: "+50 Estudiantes"
  },
  {
    category: "Educación Tecnológica",
    title: "Formación en Robótica",
    description: "Diseño e implementación de programas educativos técnicos integrando lógica de programación y hardware.",
    image: roboticsImg.src,
    tags: ["Lógica", "Hardware", "Python"],
    impact: "8 Instituciones"
  }
];
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-end mb-16">
      <h2 class="text-4xl font-bold reveal">Impacto y Formación</h2>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="group relative overflow-hidden rounded-2xl reveal bg-white/5 backdrop-blur-sm border border-white/10 hover:border-primary-cyan/50 transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-t from-[#2A2F36] via-[#2A2F36]/20 to-transparent z-10 opacity-90"></div>
          
          <div class="h-[220px] overflow-hidden">
            <img 
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700 opacity-60"
            />
            <div class="absolute top-4 left-4 z-20">
              <span class="px-3 py-1 bg-primary-blue/80 backdrop-blur-md rounded-full text-[10px] font-bold uppercase tracking-widest text-white border border-white/20">
                {project.category}
              </span>
            </div>
          </div>

          <div class="p-6 relative z-20 -mt-12">
            <h3 class="text-2xl font-bold mb-2 group-hover:text-primary-cyan transition-colors line-clamp-1">{project.title}</h3>
            <p class="text-gray-400 text-sm mb-6 line-clamp-2">{project.description}</p>
            
            <div class="flex items-center justify-between mt-auto">
              <div class="flex gap-2">
                {project.tags.slice(0, 3).map((tag) => (
                  <span class="text-[11px] font-medium text-primary-cyan opacity-80">#{tag}</span>
                ))}
              </div>
              <span class="text-xs font-bold text-white/50">{project.impact}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>